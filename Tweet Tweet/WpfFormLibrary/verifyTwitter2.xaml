<Window x:Class="WpfFormLibrary.verifyTwitter2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFormLibrary"
        mc:Ignorable="d"
        Title="verifyTwitter2" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox x:Name="twitterPin" Text="" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" TextAlignment="Center" FontSize="16"/>
        <Button x:Name="twitterBtn" Grid.Row="1" Content="Submit"  Height="30" Width="150" Click="twitterBtn_Click"/>

    </Grid>
</Window>

<Window x:Class="WpfFormLibrary.ReconfigConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFormLibrary"
        mc:Ignorable="d"
        Title="Confirm Reconfiguration" Height="127.5" Width="287.5">
    <Grid>
        <Button x:Name="yes" Content="Yes" HorizontalAlignment="Left" Margin="62,62,0,14" Width="74" VerticalAlignment="Center" IsDefault="True" Click="accept_Click"/>
        <Button x:Name="no" Content="No" HorizontalAlignment="Left" Margin="142,62,0,14" Width="76" VerticalAlignment="Center" IsCancel="True"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="30,10,0,0" TextWrapping="Wrap" Text="Are you sure you want to reconfigure the Twitter settings of Tweet Tweet?" VerticalAlignment="Top" TextAlignment="Center"/>

    </Grid>
</Window>
